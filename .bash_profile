# Bash completion for npm
# source ~/local/node/lib/node_modules/npm/lib/utils/completion.sh

export TERM="xterm-color"

# Git branch in prompt.
parse_git_branch() {
    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

